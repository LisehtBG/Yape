							"listen": "prerequest",
							"script": {
								"exec": [
									"var moment = require('moment');",
									"var checkin = moment().format(\"YYYY-MM-DD\");",
									"var checkout = moment().add(1,'day').format(\"YYYY-MM-DD\");",
									"",
									"pm.environment.set(\"checkin\",checkin);",
									"pm.environment.set(\"checkout\",checkout);",
									""
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"var JsonData = JSON.parse(responseBody);",
									"var checkin = JsonData.booking.bookingdates.checkin;",
									"var checkout = JsonData.booking.bookingdates.checkout;",
									"var nombre = JsonData.booking.firstname;",
									"var price = JsonData.totalprice;",
									"",
									"var date_checkin = new Date(checkin);",
									"var date_checkout = new Date(checkout);",
									"",
									"tests[\"Status code is 200\"] = responseCode.code === 200;",
									"tests[\"Validar el nombre --> \"+nombre] = nombre == 'Jim';",
									"tests[\"El checkout es mayor al checkin\"] = date_checkin.getTime() < date_checkout.getTime();",
