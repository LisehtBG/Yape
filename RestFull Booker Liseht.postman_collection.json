									"var jsonBody = JSON.parse(responseBody);",
									"var checkinUp = jsonBody.bookingdates.checkin;",
									"var checkoutUp = jsonBody.bookingdates.checkout;",
									"",
									"var checkin= pm.environment.get(\"checkin\");",
									"var checkout= pm.environment.get(\"checkout\");",
									"",
									"tests[\"El checkin se ha actualizado correctamente\"] = checkin == checkinUp;",
